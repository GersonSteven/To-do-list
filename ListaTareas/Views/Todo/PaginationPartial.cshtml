@model X.PagedList.IPagedList<ListaTareas.Models.Todo.Item>;

<ul class="pagination justify-content-center">
    @if (Model.HasPreviousPage)
    {
        <li class="page-item p-2">
            <a asp-route-page="@(Model.PageNumber - 1)"
               asp-route-searchString="@ViewData["CurrentSearch"]"
               class="btn btn-secondary">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
    }
    @if (Model.HasNextPage)
    {
        <li class="page-item p-2">
            <a asp-route-page="@(Model.PageNumber + 1)"
               asp-route-searchString="@ViewData["CurrentSearch"]"
               class="btn btn-secondary">
                <span class="sr-only">Next</span>
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    }
</ul>
<div class="text-center">Page @Model.PageNumber of @Model.PageCount</div>
